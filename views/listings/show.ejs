<% layout("/layouts/boilerplate") %>
<script>
  const mapyoken= "<%= process.env.MAP_TOKEN %>"
</script>
<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="row w-100">
    <div class="col-lg-8 col-md-10 mx-auto">

      <h3 class="text-center mb-4"><%= listingid.title %></h3>
      <div class="card shadow-lg mx-auto" style="max-width: 900px;">
        <img src="<%= listingid.image.url %>" class="card-img-top" alt="listing image">

        <div class="card-body">
          <p class="card-text">
            <i>Owned by <%= listingid.owner.username %></i><br/>
            <b>Description:</b> <%= listingid.description %><br>
            <b>Price:</b> &#8377;<%= listingid.price.toLocaleString("en-IN") %><br>
            <b>Location:</b> <%= listingid.location %><br>
            <b>Country:</b> <%= listingid.country %><br>
          </p>

          <% if(currentuser && listingid.owner._id.equals(currentuser._id)) { %>
            <form method="POST" action="/listing/<%= listingid._id %>?_method=DELETE" class="mb-3">
              <a href="/listing/<%= listingid._id %>/edit" class="btn btn-primary me-2">Edit this listing</a>
              <button class="btn btn-danger" type="submit">Delete</button>
            </form>
          <% } %>

          <hr>

          <% if(currentuser) { %>
            <h4 class="text-center mb-3">Leave a review</h4>
            <form action="/listing/<%= listingid._id %>/reviews" method="post" novalidate class="needs-validation">
              <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>

              <div class="mb-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">Please submit some comment for review</div>
              </div>

              <button class="btn btn-outline-dark">Submit</button>
            </form>
          <% } %>

          <% if(listingid.review.length > 0) { %>
            <hr>
            <p><b>All Reviews</b></p>
            <div class="row">
              <% for(let review of listingid.review){ %>
                <div class="card col-5 ms-3 mb-3" style="border: solid gray !important">
                  <div class="card-body">
                    <h5 class="card-title"><%= review.author.username %></h5>
                    <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                    <p class="card-text"><li><%= review.comment %></li></p>

                    <form method="POST" action="/listing/<%= listingid._id %>/review/<%= review._id %>?_method=DELETE" class="mb-3">
                      <button>Delete</button>
                    </form>
                  </div>
                </div>
              <% } %>
            </div>
          <% } %>
          
        </div>
      </div>
<!-- <div id="map"></div> -->
    
    </div>   <!-- .col-lg-8 col-md-10 -->
  </div>   <!-- .row w-100 -->
  
</div>       <!-- .container d-flex justify-content-center align-items-center min-vh-100 -->
